{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom", "es2017"],
    "sourceMap": false,
    "allowJs": false,
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "build",
    "typeRoots": ["./src/types"],
    "experimentalDecorators": true,
    "types": ["@types/node", "@types/jest"]
  },
  "exclude": [
    "tests",
    "jest.config.ts",
    "**.test.ts",
    "src/**/__tests__/*",
    "src/**/__test__/*",
    "src/**/__mock__/*",
    "src/**/__mocks__/*"
  ]
}
